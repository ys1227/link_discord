<div class="border-4 border-black my-10 mx-4 p-6 w-11/12 md:w-1/2 lg:w-1/3 xl:w-1/4">
  <div class="text-center flex items-center justify-center flex-col">
    <div class="flex items-center justify-center">
      <%= image_tag(question.user.image, class: "w-12 h-12 object-cover rounded-full mr-2") %>
      <span><%= question.user.name %></span>
    </div>
    <p><%= reservation.rank_i18n %></p>
    <%= l reservation.start_time, format: :long, class:"font-bold" %>
    <div class="mt-4 max-h-36 overflow-y-auto w-full">
      <p>投票者</p>
      <div class="flex flex-wrap gap-2 justify-center">
        <% reservation.votes.each do |vote| %>
          <div class="flex flex-col items-center">
            <%= image_tag(vote.user.image, class: "w-12 h-12 object-cover rounded-full mb-1") %>
            <span><%= vote.user.name %></span>
          </div>
        <% end %>
      </div>
    </div>
    <%= button_to "投票する", question_reservation_votes_path(question, reservation), method: :post, class: "mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>