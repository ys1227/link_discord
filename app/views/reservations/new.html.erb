<div class="min-h-screen bg-white">
  <div class="text-black  border-4 border-double border-black w-1/2 p-3 mx-auto text-center text-xl my-8">
    STEP1 Discordに集まる募集日時を登録しよう
    <p class="text-black text-center">募集時間は３つまで登録できるよ</p>
  </div>

  <div class=" text-black border-2 border-solid border-black w-1/3 p-3 mx-auto text-center text-xl my-8">
    <p>締め切り設定時間</p>
    <%=l @question.deadline, format: :long %>
  </div>
  <div class="max-w-xl mx-auto py-8">
    <%= form_with(model: [@question, @reservation], local: true, class: "bg-discord-dark-secondary shadow-md rounded px-8 pt-6 pb-8 mb-4") do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="mb-6">
        <%= f.label :start_time, "開始時刻", class: "block text-white text-sm font-bold mb-2" %>
        <%= f.datetime_select :start_time, { minute_step: 60, start_hour: 9, end_hour: 23 }, class: "block appearance-none w-full bg-discord-input text-white border border-discord-input-border rounded py-3 px-4 leading-tight focus:outline-none focus:border-discord-focus" %>
      </div>
      <div class="flex items-center justify-center">
        <%= f.submit "これで登録する", class: "bg-discord-blurple hover:bg-discord-blurple-dark text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

  <!-- <div class="max-w-xl mx-auto py-8">
    <%= month_calendar events: @reservations, class: "shadow-md rounded" do |date, reservations| %>
      <div class="calendar-day bg-gray-200 p-4 border-b border-gray-300">
        <%= date.day %>
      </div>
      <% reservations.each do |reservation| %>
        <div class="reservation p-4 border-b border-gray-300">

          <%=link_to "削除する" + "#{l(reservation.start_time, format: :time_only)}", question_reservation_path(@question,reservation), data: {turbo_method: :delete} %>
        </div>
      <% end %>
    <% end %>-->

    <div class="flex justify-center mx-auto flex-col w-1/2">
      <% @reservations.each do |reservation| %>
      <div class="border-2 border-indigo-600 my-2 p-4">
        <%= link_to "削除する", question_reservation_path(@question, reservation), data: { turbo_method: :delete }, class: "text-indigo-600 hover:text-indigo-800" %>
        <%=(l reservation.start_time, format: :short)%>
      </div>
      <% end %>
    </div>
    <div class="flex justify-center">
    <%= link_to "次のスッテプへ", question_reservations_path, class: " border-2 border-sollid boder-black text-indigo-600 hover:text-indigo-800" %>
    </div>
  </div>
</div>


