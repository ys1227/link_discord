<div class="flex-1 w-full bg-gray-800 flex items-center justify-center p-4 mt-atuo">
  <div class="bg-discord-dark bg-opacity-75 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
    <div class="mb-4">
    <p class= "text-white">締め切り</p>
    <p class="text-white mb-3 text-xl mb-5"><%= l @question.deadline %></p>
      <p class="text-white text-center text-xl font-dotgothic border-2 border-double mb-4 rounded-full "><%= @question.state_i18n%><p>
      <div class="flex justify-center items-center mb-2">
        <% if @question.user.image? == true  %>
        <%= image_tag @question.user.image, alt: @question.user.name, class: "h-16 w-16 rounded-full" %>
        <%else%>
        <%= image_tag "1_test.png", alt: @question.user.name, class: "h-16 w-16 rounded-full"%>
        <%end%>
        <h2 class="title-font sm:text-2xl text-xl font-medium text-white ml-4">
          <%= @question.user.name %>
        </h2>
      </div>
      <div class="bg-discord-container p-4 rounded-lg">
        <p class="text-white font-bold "><%="🚀#{@question.role_i18n}🚀" %></p>
        <h2 class="text-white font-bold mb-3"><%= @question.title %></h2>
        <h2 class="text-white font-bold mb-3"><%= @question.content %></h2>
      </div>
    </div>
    <%if @question.state == "closed"%>
      <%= link_to "集合時間を確認する",   question_matching_times_path(@question), class: "text-discord-blurple inline-flex items-center mt-2" %>
      <%end%>
      <% if current_user.present? && @question.user == current_user && (@question.state != "closed" || @question.state == "draft") %> 
        <%= link_to "編集する", edit_question_path(@question), class: "text-discord-blurple inline-flex items-center mt-4" %>
        <%= link_to "削除する", question_path(@question),data: { turbo_method: :delete }, class: "text-discord-blurple inline-flex items-center mt-4" %>
      <%end%>
      <%= link_to "投稿一覧に戻る", questions_path, class: "text-discord-blurple inline-flex items-center mt-4" %>
      <div class ="mt-4">
      <%if @question.user == current_user%>
      <%= link_to "https://twitter.com/share?text=【🚀Link_Disco🚀】💫募集を開始しました!💫&url=#{request.url}", target: '_blank' do %>
          <i class="fa-brands fa-square-x-twitter fa-4lg custom-icon mt-2 "></i>
          <p class="text-white text-center mt-2">💫Go to X share💫
        <% end %>
        <% end %>
      </div>
  </div>
  </div>