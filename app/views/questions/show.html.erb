<div class="min-h-screen flex justify-center items-center  bg-gray-800">
  <div class="w-2/3 bg-discord-dark bg-opacity-75 px-10 pt-16 pb-24 rounded-lg overflow-hidden text-center relative mx-auto">
      <div class="mb-4">
      <p class= "text-white">応募締め切り</p>
      <p class="text-white mb-3 text-xl mb-5"><%= l @question.deadline %></p>
        <div class=" text-white text-center text-xl border-solid border-2 mb-4 rounded-full"><%= @question.state_i18n%></div>
        <div class="flex justify-center items-center mb-2">
          <% if @question.user.image? == true %>
          <%= image_tag @question.user.image, alt: @question.user.name, class: "h-16 w-16 rounded-full" %>
          <%else%>
          <%= image_tag "1_test.png", alt: @question.user.name, class: "h-16 w-16 rounded-full"%>
          <%end%>
          <h2 class="title-font sm:text-2xl text-xl font-medium text-white ml-4">
            <%= @question.user.name %>
          </h2>
        </div>
        <div class="bg-discord-container p-4 rounded-lg">
          <p class="text-white font-bold "><%= @question.role_i18n %></p>
          <h2 class="text-white font-bold mb-3"><%= @question.title %></h2>
          <p class="text-white leading-relaxed mb-3">
            <%= @question.content %>
          </p>
        </div>
      </div>
      <%if @question.state == "closed"%>
      <%= link_to "集合時間を確認する",   question_matching_times_path(@question), class: "text-discord-blurple inline-flex items-center mt-2" %>
      <%end%>
      <%if @question.user == current_user%>
      <%= link_to "編集する", edit_question_path(@question), class: "text-discord-blurple inline-flex items-center mt-2" %>
      <%= link_to "削除する", question_path(@question),data: { turbo_method: :delete }, class: "text-discord-blurple inline-flex items-center mt-2" %>
      <%end%>
    </div>
  </div>
