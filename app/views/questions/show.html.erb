<div class="min-h-screen bg-white">
  <h1 class="text-xl text-center text-gray-900 pt-10">投稿詳細画面</h1>
  <div class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-wrap -m-4">
        <div class="p-4 lg:w-1/3">
          <div class="h-full bg-discord-dark bg-opacity-75 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
            <h1 class="title-font sm:text-2xl text-xl font-medium text-white mb-3">
              <%=@question.title%>
            </h1>
            <p class="leading-relaxed text-white mb-3">
              <%=@question.content%>
            </p>
            <% if current_user == @question.user %>
              <%= link_to "削除する", question_path(@question), data: { turbo_method: :delete }, class: "text-white border border-white rounded py-2 px-4 hover:bg-white hover:text-discord-dark transition ease-in-out duration-150" %>
              <%= link_to "編集する", edit_question_path(@question), class: "text-white border border-white rounded py-2 px-4 hover:bg-white hover:text-discord-dark transition ease-in-out duration-150 ml-4" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>